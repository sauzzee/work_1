def додавання(a, b)
  a + b
end

def віднімання(a, b)
  a - b
end

def множення(a, b)
  a * b
end

def ділення(a, b)
  if b == 0
    "Помилка: ділення на нуль!"
  else
    a.to_f / b
  end
end

a = 10
b = 5

puts "Перше число: #{a}"
puts "Друге число: #{b}"

puts "Додавання: #{додавання(a, b)}"
puts "Віднімання: #{віднімання(a, b)}"
puts "Множення: #{множення(a, b)}"
puts "Ділення: #{ділення(a, b)}"
